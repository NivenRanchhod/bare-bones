    #dark-mode:checked ~ .wrapper .toggle { background:#313033; box-shadow:0 2px 2px inset #262626; border-bottom-color:#4a4a4a; }
    #dark-mode:checked ~ .wrapper .toggle:before { background:#4D4B52; box-shadow:0 2px 4px #262626; }
    #light-mode:checked ~ .wrapper .toggle:before { border-top-color:#fff; }

    #light-mode:checked ~ .wrapper .toggle:after {  content: ''; position: absolute; top:7px; left:103px; width:90px; height:45px; border-radius:60px; z-index:1; opacity:0; transition:background 0.3s ease-out; transition:opacity 0.3s ease-out; }
    #dark-mode:checked ~ .wrapper .toggle:after { content: ''; position: absolute; top:7px; left:7px; width:90px; height:45px; border-radius:60px; z-index:1; opacity:0; transition:background 0.3s ease-out; transition:opacity 0.3s ease-out; }
    #light-mode:checked:hover ~ .wrapper .toggle:after,
    #dark-mode:checked:hover ~ .wrapper .toggle:after { opacity:0!important; }
