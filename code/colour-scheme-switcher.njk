  <style id="interactive-styles" type="text/css">
    .toggle { width:200px; background:#F1F0F5; height:59px; border-radius:60px; margin:50px auto; border-bottom:2px solid #fff; box-shadow:0 2px 2px inset #e3e3e3; position:relative; }
    .toggle:before { content: ''; position: absolute; top: 7px; background:#fff; width:90px; height:43px; border-radius:60px; z-index:2; box-shadow:0 2px 4px #dbdbdb; transition:all 0.3s cubic-bezier(.55,.06,.68,.19); border-top:2px solid #626262; }
    #light-mode:checked ~ .wrapper .toggle:before { left: 7px; }
    #dark-mode:checked ~ .wrapper .toggle:before { left: 103px; }
    .select { display:inline-block; width:95px; height:59px; line-height: 59px; position:relative; z-index:2; }
    .select span { max-height:0;max-width:0;display:inline-block;mso-font-width:0%;mso-style-textfill-type: none; white-space: nowrap;font-size:1px;color:rgba(0,0,0,0);text-indent:9px; }

    .light { width:90px; height:59px; background:url({{ '/images/experiment-assets/colour-scheme-switcher/sun.png' | url }}); background-size:22px; background-repeat:no-repeat; background-position:center; }
    .dark { width:90px; height:59px; background:url({{ '/images/experiment-assets/colour-scheme-switcher/moon.png' | url }}); background-size:22px; background-repeat:no-repeat; background-position:35px center; }

    #light-mode ~ .wrapper .toggle .light .icon { height:100%; background:url({{ '/images/experiment-assets/colour-scheme-switcher/sun-on.png' | url }}); background-position:center; background-size:22px; background-repeat:no-repeat; opacity:0; }
    #dark-mode ~ .wrapper .toggle .dark .icon { height:100%; background:url({{ '/images/experiment-assets/colour-scheme-switcher/moon-on.png' | url }}); background-position:35px center; background-size:22px; background-repeat:no-repeat; opacity:0; }
    #light-mode ~ .wrapper .toggle .light:hover .icon,
    #dark-mode ~ .wrapper .toggle .dark:hover .icon { opacity:1; }

    #light-mode:checked ~ .wrapper .toggle .light { background:url({{ '/images/experiment-assets/colour-scheme-switcher/sun-on.png' | url }}); background-size:22px; background-repeat:no-repeat; background-position:center; }
    #dark-mode:checked ~ .wrapper .toggle .dark { background:url({{ '/images/experiment-assets/colour-scheme-switcher/moon-on.png' | url }}); background-size:22px; background-repeat:no-repeat; background-position:35px center; }

    #dark-mode:checked ~ .wrapper { background:#3a393d; }
    #light-mode:checked ~ .wrapper h1 { color:#7e45ff; text-shadow:0 2px 2px #dbdbdb; }
    #dark-mode:checked ~ .wrapper h1 { color:#986bff; text-shadow:0 3px 4px #262626; }
      #light-mode:checked ~ .wrapper a { color:#7e45ff; }
